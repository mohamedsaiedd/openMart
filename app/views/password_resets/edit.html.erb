<h1>Create New Password</h1>

<%= form_with model: @user , url: password_reset_edit_path(token: params[:token]) do |form|%>

    <div class="form-group mb-3">
        <label for="exampleInputEmail1">New Password</label>
        <%= form.password_field :password , class:"form-control" , placeholder: "test@123"%>
    </div>
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">New Password Confirmation</label>
        <%= form.password_field :password_confirmation , class:"form-control" %>
    </div>

   <%if @user.errors.any? %>
    <div class="alert alert-danger mt-3">
        <% @user.errors.full_messages.each  do |msg|%>
            <li>
            <%= msg%>
            </li>
        <%end%>
        </div>
    <%end%>
    
    <%= form.submit "Update" , class:"btn btn-primary" %> 

<% end %>
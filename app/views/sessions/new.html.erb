<h1 class="mt-5">Login</h1>

<%= form_with  url: log_in_path do |form|  %>
    
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Email address</label>
        <%= form.text_field :email , class:"form-control" , placeholder: "mohamed@test.com" %>
    </div>
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Password</label>
        <%= form.password_field :password , class:"form-control" , placeholder: "test@123"%>
    </div>
    <div class="form-group mb-3">

    <%= link_to 'Forget Password?', password_reset_path%>
   </div>
    <%= form.submit "Login" , class:"btn btn-primary" %>    
<% end%>
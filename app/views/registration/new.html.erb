<h1 class="mt-5">Sign UP</h1>

<%= form_with model: @user, url: sign_up_path do |form|  %>
    
    <div class="form-group mb-3 mt-5">
        <label for="exampleInputEmail1">Full name</label>
        <%= form.text_field :name , class:"form-control" , placeholder: "ahmed mohamed" %>
    </div>
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Email address</label>
        <%= form.text_field :email , class:"form-control" , placeholder: "mohamed@test.com" %>
    </div>
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Password</label>
        <%= form.password_field :password , class:"form-control" , placeholder: "test@123"%>
    </div>
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Password Confirmation</label>
        <%= form.password_field :password_confirmation , class:"form-control" %>
    </div>

    <%if @user.errors.any? %>
    <div class="alert alert-danger mt-3">
        <% @user.errors.full_messages.each  do |msg|%>
            <li>
            <%= msg%>
            </li>
        <%end%>
        </div>
    <%end%>
    <%= form.submit "Register" , class:"btn btn-primary" %>    
<% end%>
<h1 class="mt-5">Edit Pawword</h1>

<%= form_with model: Current.user, url: edit_password_path do |form|  %>
    
    
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Password</label>
        <%= form.password_field :password , class:"form-control" , placeholder: "test@123"%>
    </div>
    <div class="form-group mb-3">
        <label for="exampleInputEmail1">Password Confirmation</label>
        <%= form.password_field :password_confirmation , class:"form-control" %>
    </div>

  
    <%= form.submit "Update Password" , class:"btn btn-primary" %>    
<% end%>